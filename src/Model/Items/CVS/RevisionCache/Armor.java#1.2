public class Armor extends Defense
{

    private ArmorType _armorType;
    /**
     * Constructor method for Armor.
     * @param pName
     * @param pFileName 
     */
    public Armor(String pName, String pFileName)
    {
        _fileName = pFileName;
        _name = pName;
        OutputConsole.GetOutputConsoleInstance().Write("An Armor was just created.");
    }

    public Armor(ArmorType _pArmorType)
    {
        if(_pArmorType.equals(_armorType.HEAVY))
            _name = "ArmorHeavy";
        if(_pArmorType.equals(_armorType.MEDIUM))
            _name = "ArmorMedium";
        if(_pArmorType.equals(_armorType.LIGHT))
            _name = "ArmorLight";
    }

    public ArmorType getArmorType()
    {
        return _armorType;
    }

    public void setArmorType(ArmorType _armorType)
    {
        this._armorType = _armorType;
    }
    
    

