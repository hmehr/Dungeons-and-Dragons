    /**
     * 
     * This method fetches all the characters saved into the files, creates a character object for each,
     * then store all of them in an ArrayList.
     * 
     * @author Hamid
     * */
    public void fetchCharactersFromDirectory()
    {

        _characters = new ArrayList<Character>();
        File directory = new File(_savePath);
        String filename[] = directory.list();
        for (int i = 0; i < filename.length; i++)
        {
            try
            {
                if (filename[i].indexOf(".ch") > 0)
                {
                    File file = new File(_savePath + filename[i]);
                    FileInputStream fin = new FileInputStream(file.getAbsoluteFile());
                    ObjectInputStream ois = new ObjectInputStream(fin);
                    Model.Character loadedCharacter = (Model.Character) ois.readObject();
                    _characters.add(loadedCharacter);


                }
            } catch (Exception e)
            {
                OutputConsole.GetOutputConsoleInstance().WriteException("Error occured: " + e.getMessage());
            }
        }

        OutputConsole.GetOutputConsoleInstance().Write("Characters are all loaded from the disk.");
    }

