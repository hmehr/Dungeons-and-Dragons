    private void jButtonSaveActionPerformed(java.awt.event.ActionEvent evt)//GEN-FIRST:event_jButtonSaveActionPerformed
    {//GEN-HEADEREND:event_jButtonSaveActionPerformed

        _character.setStrength(Integer.parseInt(jTextFieldStrentgh.getText()));
        _character.setDexterity(Integer.parseInt(jTextFieldDexterity.getText()));
        _character.setConstitution(Integer.parseInt(jTextFieldConstitution.getText()));
        _character.setIntelligence(Integer.parseInt(jTextFieldIntelligence.getText()));
        _character.setWisdom(Integer.parseInt(jTextFieldWisdom.getText()));
        _character.setCharisma(Integer.parseInt(jTextFieldCharishma.getText()));
        _character.setName(jTextFieldName.getText());


        try
        {
            FileOutputStream fout = new FileOutputStream(savePath + _character.getName() + ".ch");
            ObjectOutputStream oos = new ObjectOutputStream(fout);
            File file = new File(savePath + _character.getName() + ".ch");
            if ( ! file.exists())
                oos.writeObject(_character);
            else
            {
                file.delete();
                oos.writeObject(_character);
            }
            oos.close();

            jLabelMessage.setText("Saved Successfully!");
            Thread.sleep(1000);
            this.setVisible(false);
        } catch (Exception e)
        {
            jLabelAbility.setText(e.toString());
        }


    }//GEN-LAST:event_jButtonSaveActionPerformed

